server {
    listen       80;
    listen       [::]:80;
    server_name  {{ item.server_name }};
    return       301 $scheme://{{ item.server_name.split(' ')[0] }}$request_uri;
}

server {
    {% block server_begin %}{% endblock %}
    server_name {{ item.server_name }};

    listen 443 ssl http2;
    listen       [::]:443 ssl http2;

    ssl_certificate /etc/ssl/***REMOVED***.com/***REMOVED***.com.pub;
    ssl_certificate_key /etc/ssl/***REMOVED***.com/***REMOVED***.com.priv;

    location / {
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   Host $host;
        proxy_pass         http://127.0.0.1:{{ item.proxy_port }}/;
        proxy_http_version 1.1;
        proxy_set_header   Upgrade $http_upgrade;
        proxy_set_header   Connection "upgrade";
    }

{% if item.extra_parameters is defined %}
    {{ item.extra_parameters|indent(4) }}
{% endif %}
}